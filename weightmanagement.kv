#:kivy 2.0

# Global UI element definitons

<Big_Label@Label>:
    font_size: 32
    color: 'edd926'

<Big_TextInput@TextInput>:
    font_size: 32
    multiline: False

<Big_Button@Button>:
    font_size: 24
    
# Glayout class definition
<Glayout>:
    id: weight_calculator

    # Properties
    height_value: height_text
    weight_value: weigh_text
    age_value: age_text
    sex_value: sex_text
    bmi_value: bmi_text

    # Number of columns
    cols: 2

    # UI elements
    Big_Label:
        id: height_label
        text: 'Pituus (cm)'

    Big_TextInput:
        id: height_text

    Big_Label:
        id: weight_label
        text: 'Paino (kg)'

    Big_TextInput:
        id: weigh_text

    Big_Label:
        id: age_label
        text: 'Ik√§'

    Big_TextInput:
        id: age_text

    Big_Label:
        id: sex_label
        text: 'Sukupuoli'

    Big_TextInput:
        id: sex_text
        hint_text: 'Mies 1, nainen 0'

    Big_Button:
        id: bmi_button
        text: 'Laske BMI'
        on_press: root.calculate_bmi()

    Big_TextInput:
        id: bmi_text
        disabled: True
        disabled_foreground_color: 'edd926'
        background_color: '000000'